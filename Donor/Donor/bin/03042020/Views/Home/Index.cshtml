<!-- Masthead -->

    <header class="masthead text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">The Measure Of a life, after all is not its duration but its donation</h1>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row center-block">
                            <div class="col-12 col-md-3">
                                @Html.ActionLink("Donate", "Create", "DonorDetails", routeValues: null, htmlAttributes: new { id = "donorReg", @class = "btn btn-block btn-lg btn-primary" })
                            </div>
                            <div class="col-12 col-md-3">
                                @Html.ActionLink("LifeLinkers", "ReadOnly", "DonorDetails", routeValues: null, htmlAttributes: new { id = "donorReg", @class = "btn btn-block btn-lg btn-primary" })

                              
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>




<!-- Icons Grid -->
<section class="features-icons bg-light text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="icon-emotsmile m-auto text-primary"></i>
                    </div>
                    <h3>Be a smile</h3>
                    <p class="lead mb-0">Become a Person behind somone's Smile</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="icon-drop m-auto text-primary"></i>
                    </div>
                    <h3>Blood</h3>
                    <p class="lead mb-0">Your Droplets of blood can create Ocean of Happiness!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="icon-people m-auto text-primary"></i>
                    </div>
                    <h3>Humanity</h3>
                    <p class="lead mb-0">Live Not only for you also for other</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Image Showcases -->
<section class="showcase">
    <div class="container-fluid p-0">
        <div class="row no-gutters">

            <img class="col-lg-6 order-lg-2 text-white showcase-img" src="~/Content/startpage/img/img1.jpg" />
            <div class="col-lg-6 order-lg-1 my-auto showcase-text">

                <h2>Life</h2>
                <p class="lead mb-0">
                   We make a Living by what we get, but we make a life by what we give
                </p>
            </div>
        </div>
        <div class="row no-gutters">

            <img class="col-lg-6 text-white showcase-img" src="~/Content/startpage/img/img2.jpg" />

            <div class="col-lg-6 my-auto showcase-text">
                <h2>Chance</h2>
                <p class="lead mb-0">
                   Get a chance to become a donor and give someone a second chance
                </p>
            </div>
        </div>
        <div class="row no-gutters">
            <img class="col-lg-6 order-lg-2 text-white showcase-img" src="~/Content/startpage/img/img3.png" />
            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                <h2>Why Donation?</h2>
                <p class="lead mb-0">
                   You have the power to save lives and improve the quality of life of those in need of any form of transplant
                </p>
            </div>
        </div>
    </div>
</section>


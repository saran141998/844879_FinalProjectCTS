    <thead>
        <tr>
            <th>Donor Name</th>
            <th>Donor Address</th>
            <th>Donor Email</th>
            <th>Donor Mobile</th>
            <th>Donor Gender</th>
            <th>Organ Name</th>
            <th>IsHospitalAuthorized</th>
            <th></th>
        </tr>
    </thead>

</table>




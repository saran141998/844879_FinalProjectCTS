        function Delete(id) {
            if (confirm('Are you sure to Delete this Donor?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "DonorDetails")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify("Deleted Successfully");
                        }
                    }

                });
            }
        }

       
